<button>
    <a class="" asp-area="" asp-controller="People" asp-action="Create">Create</a>
</button>

@model PersonModel
@using(Html.BeginForm("Create","People",FormMethod.Post)){
    <form>
        @Html.TextBoxFor(m=>m.FirstName, new {@placeHolder="Mon prénom"})
        @Html.TextBoxFor(m=>m.LastName, new {@placeHolder="Mon nom"})
        @Html.TextBoxFor(m=>m.Age, new {@placeHolder="Mon age"})
        @Html.CheckBoxFor(m=>m.IsAlive)
        <input type="submit">
    </form>
}


