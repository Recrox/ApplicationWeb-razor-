@model IEnumerable<PersonModel>

<title>People Page</title>

<h1>People</h1>

@*<button>
    <a class="" asp-area="" asp-controller="People" asp-action="Edit">Create</a>
</button>*@
<br />
@Html.ActionLink("Create","Edit")


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.FirstName)</th>
            <th>LastName</th>
            <th>Age</th>
            <th>IsAlive</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (PersonModel item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=>item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem=>item.LastName)</td>
                <td>@Html.DisplayFor(modelItem=>item.Age)</td>
                <td>@Html.DisplayFor(modelItem=>item.IsAlive)</td>
                <td>
                    @Html.ActionLink("Details","Details",new {id = item.Id})
                    @Html.ActionLink("Edit","Edit",new {id = item.Id})
                    @Html.ActionLink("Delete","DeleteById",new {id = item.Id})
                </td>
            </tr>
        }       
    </tbody>
</table>